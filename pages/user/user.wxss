.login_all_wrap {
  background-color: #f1f1f1;
}
.login_all_wrap .tip_wrap {
  color: red;
  font-size: 28rpx;
  padding: 12rpx;
}
.login_all_wrap .login_wrap {
  background-color: white;
  padding: 48rpx;
  margin-left: 48rpx;
  margin-right: 48rpx;
  margin-top: 10%;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  align-items: center;
}
.login_all_wrap .login_wrap .img_wrap image {
  height: 140rpx;
  width: 140rpx;
  border: 1rpx solid #d1d1d1;
  border-radius: 50%;
  padding: 24rpx;
}
.login_all_wrap .login_wrap .operation_wrap {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
}
.login_all_wrap .login_wrap .operation_wrap .list {
  display: flex;
  flex-direction: row;
  border: 1rpx solid #f0f0f0;
  padding: 12rpx;
}
.login_all_wrap .login_wrap .operation_wrap .list .title {
  font-weight: 500;
  width: 100rpx;
}
.login_all_wrap .login_wrap .operation_wrap .list input {
  text-align: left;
  padding-left: 24rpx;
}
.login_all_wrap .bt {
  margin-top: 48rpx;
  border: 2rpx solid #ca84c4;
  background-image: linear-gradient(to right, #bf7efc, #ffb0fb);
  text-align: center;
  padding: 24rpx;
  margin-left: 48rpx;
  margin-right: 48rpx;
  color: white;
}
.user_all_wrap {
  background-color: white;
}
.user_all_wrap .content_item_wrap {
  box-shadow: 4px 4px 5px #b1b0b0;
  margin: 24rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: row;
  padding: 24rpx;
}
.user_all_wrap .content_item_wrap .left_content {
  display: flex;
  flex-direction: column;
  flex: 4;
  justify-content: center;
  color: white;
  font-size: 34rpx;
}
.user_all_wrap .content_item_wrap .left_content .english {
  margin-top: 12rpx;
}
.user_all_wrap .content_item_wrap .right_wrap {
  flex: 1;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.user_all_wrap .content_item_wrap .right_wrap .img_wrap image {
  height: 80rpx;
  width: 80rpx;
}
.user_all_wrap .bt_wrap {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
}
.user_all_wrap .bt_wrap button {
  margin-top: 24rpx;
}
